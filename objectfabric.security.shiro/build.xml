<project name="objectfabric.indexes.sqlite" default="jar" basedir=".">
	<import file="../objectfabric/build.xml" />

	<target name="jar" description="Create jar">
		<mkdir dir="bin" />
		<delete file="bin/objectfabric.indexes.sqlite-${version}.jar" failonerror="false" />
		<jar destfile="bin/objectfabric.indexes.sqlite-${version}.jar" level="9">
			<fileset dir="classes" includes="**/*.class" excludes="" />
		</jar>
		<delete file="bin/objectfabric.indexes.sqlite-${version}-src.jar" failonerror="false" />
		<jar destfile="bin/objectfabric.indexes.sqlite-${version}-src.jar">
			<fileset dir="src" />
		</jar>
	</target>
</project>
