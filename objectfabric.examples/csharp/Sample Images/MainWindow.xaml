<Window x:Class="SampleImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Images - .NET" Height="400" Width="600">
    <Canvas Name="canvas">
        <Button x:Name="button" Content="New Image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click_1" IsEnabled="False" Canvas.Left="11" Canvas.Top="41"/>
        <Image x:Name="complete" Canvas.Left="11" Source="Resources/sync-complete-24.png" Stretch="UniformToFill" Width="24" Height="24" Canvas.Top="10" Visibility="Hidden"/>
        <Label x:Name="label" Content="Label" Canvas.Left="35" Width="138" Canvas.Top="10"/>
        <Image x:Name="disconnected" Canvas.Left="11" Source="Resources/sync-disconnected-24.png" Stretch="UniformToFill" Width="24" Height="24" Canvas.Top="10"/>
        <Image x:Name="ongoing" Canvas.Left="11" Source="Resources/sync-ongoing-24.png" Stretch="UniformToFill" Width="24" Height="24" Canvas.Top="10" Visibility="Hidden"/>
    </Canvas>
</Window>
