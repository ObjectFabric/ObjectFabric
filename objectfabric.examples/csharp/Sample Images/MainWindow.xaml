<Window x:Class="SampleImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600">
    <Canvas Name="canvas">
        <Button x:Name="button" Content="New Image" HorizontalAlignment="Left" Margin="50,49,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" IsEnabled="False"/>
        <Image x:Name="complete" Canvas.Left="420" Source="Resources/sync-complete-24.png" Stretch="UniformToFill" Width="24" Height="24" Visibility="Hidden"/>
        <Label x:Name="label" Content="Label" Canvas.Left="444" Width="138"/>
        <Image x:Name="disconnected" Canvas.Left="420" Source="Resources/sync-disconnected-24.png" Stretch="UniformToFill" Width="24" Height="24"/>
        <Image x:Name="ongoing" Canvas.Left="420" Source="Resources/sync-ongoing-24.png" Stretch="UniformToFill" Width="24" Height="24" Visibility="Hidden"/>
    </Canvas>
</Window>
